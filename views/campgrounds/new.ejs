<%- include ("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto">
            <form method="post" action="/campgrounds">
                <div class="form-group">
                    <input class="form-control" placeholder="name" type="text" name="campground[name]">
                </div>
                <div class="form-group">
                  <input class="form-control" placeholder="image" type="text" name="campground[image]">
                </div>
                <div class="form-group">
                    <label for="">Description</label>
                    <textarea class="form-control" name="campground[description]"></textarea>
                </div>

                <div class="form-group">
                    <input min="0.01" step="1" class="form-control" placeholder="Price" type="text" name="campground[price]">
                </div>
                <div class="form-group">
                    <button class="btn btn-md btn-primary btn-block">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>

    </div>
</div>

<%- include ("../partials/footer") %>
